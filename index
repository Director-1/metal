    <script>
        let r = document.querySelector('#s_0');
        let r_0 = document.querySelector('#s_1');

        let main = document.querySelector('.cont');
        let id = 0;

        main = Array.from(main.children);
        for (let x of main) {
            x.style.display = 'none';
        }
        main[id].style.display = "";

        function der(x) {
            if (x.tagName == 'A') {
               main[id].style.display = 'none';
               id = x.getAttribute('data-ni');
               main[id].style.display = "";
            }
        }

        r.addEventListener('click', function(event) {
            der(event.target);
        });
        r_0.addEventListener('click', function(event) {
            der(event.target);
        });

        /* Корзина */
        let met = document.querySelector('.metal');
        let tov = Array.from(met.children);

        let sum_val = 0;
        let sum_dol = 0;

        let cen = [3000, 5000, 100, 1000];
        met.addEventListener('click', function(event) {
            w = event.target;
            if (w.tagName == 'IMG') {
                w = w.parentNode;
            }
           if (w.firstElementChild.tagName == 'IMG') {
                sum_dol += cen[w.getAttribute('data-bi')];
                
                if (cen[w.getAttribute('data-bi')] > 0) {
                    w.style.backgroundColor = "green";
                    sum_val++;
                } else {
                    w.style.backgroundColor = "";
                    sum_val--;
                }
                S_0.innerHTML = sum_dol;
                S_1.innerHTML = sum_val;
                cen[w.getAttribute('data-bi')] = ~cen[w.getAttribute('data-bi')] + 1;
           }
        });
    </script>
